<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Data Table</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: rgba(216, 216, 216, 255)">
          <!-- Navbar Start-->
  <body style="background-color: rgba(216, 216, 216, 255)">
    <nav class="bg-dark py-2" data-bs-theme="dark">
      <div class="container">
        <ul class="nav nav-underline justify-content-center">
          <li class="nav-item">
            <a class="nav-link text-white" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/crud/form/">Form Fill</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white active" href="/crud/read/">Data Table</a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- Navbar End -->
    <div class="container mt-5">
      <table class="table table-striped table-hover shadow shadow-lg">
        <thead>
          <tr class="table-dark">
            <th scope="col">S.N</th>
            <th scope="col">Full Name</th>
            <th scope="col">Email Address</th>
            <th scope="col">City</th>
            <th scope="col">Country</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% if(fetchData.length!=0){ var i=1; fetchData.forEach(function(data){
          %>
          <tr class="fw-semibold">
            <td scope="row" class="fw-semibold"><%=i; %></td>
            <td><%=data.full_name %></td>
            <td><%=data.email_address %></td>
            <td><%=data.city %></td>
            <td><%=data.country %></td>
            <td>
              <a
                class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover badge text-bg-warning text-wrap"
                style="width: 3.5rem"
                href="/crud/edit/<%=data.id%>"
                >Edit</a
              >
            </td>
            <td>
              <a
                class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover badge text-bg-danger text-wrap"
                style="width: 3.5rem"
                href="/crud/delete/<%=data.id%>"
                >Delete</a
              >
            </td>
          </tr>
          <% i++; }) %> <% } else{ %>
          <tr>
            <td class="fs-3 text-center" colspan="7">No Data Found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
